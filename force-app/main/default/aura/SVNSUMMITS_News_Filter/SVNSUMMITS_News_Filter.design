<design:component label="7S News Filter">
	<design:attribute name="compactView"
	                  label="Compact View?"
	                  description="If sidebar, check box."/>
	<design:attribute name="headingTitle"
                      label="Heading Title"
                      description="Heading title for the filter"/>
	<design:attribute name="defaultView"
	                  label="Default View"
	                  datasource="Tile,List"/>
	<design:attribute name="showAuthors"
	                  label="Show author filter"
	                  description="Select to show the author filter"/>
	<design:attribute name="showDates"
	                  label="Show date filter"
	                  description="Select to show the start and end date filter"/>
	<design:attribute name="showTopics"
	                  label="Show topic filter"
	                  description="Select to show the topic filter"/>
	<design:attribute name="showLayout"
	                  label="Show tile layout buttons"
	                  description="Select to show the tile layout buttons"/>
	<design:attribute name="showSort"
	                  label="Show sort"
