<aura:component description="SVNSUMMITS_Members_CustomField">

	<aura:attribute name="customField" type="String" access="public"/>
	<aura:attribute name="customLabel" type="String" access="public"/>

	<lightning:layout multipleRows="false">
		<lightning:layoutItem class="slds-text-color_default">
			{!v.customLabel}&nbsp;
		</lightning:layoutItem>
		<lightning:layoutItem class="slds-text-color_weak slds-truncate">
			{!v.customField}
		</lightning:layoutItem>
	</lightning:layout>
</aura:component>