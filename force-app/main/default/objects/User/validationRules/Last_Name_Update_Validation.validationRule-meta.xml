<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Last_Name_Update_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(LastName), NOT(Apex_Processing__c), NOT( $Profile.Name = &quot;System Administrator&quot;))</errorConditionFormula>
    <errorDisplayField>LastName</errorDisplayField>
    <errorMessage>This field is controlled by the contact record. Please update this field on the contact record.</errorMessage>
</ValidationRule>
