<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>No_IP_Reason</fullName>
    <active>true</active>
    <description>If IP included = no, reason required.</description>
    <errorConditionFormula>AND(
ISPICKVAL( IP_Included__c , &apos;No&apos;),ISBLANK(Reason_for_No_IP__c)

)</errorConditionFormula>
    <errorDisplayField>IP_Included__c</errorDisplayField>
    <errorMessage>Please populate a reason IP is not included.</errorMessage>
</ValidationRule>
