<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Lead_Source_must_not_be_blank</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
 ISNEW() ,
ISBLANK(TEXT( Lead.LeadSource ))
)</errorConditionFormula>
    <errorMessage>Lead Source must not be blank</errorMessage>
</ValidationRule>
