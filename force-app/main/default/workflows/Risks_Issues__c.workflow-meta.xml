<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Notify_PM_PC_and_AE_of_new_Risk_or_Issue</fullName>
        <description>Notify PM, PC and AE of new Risk or Issue</description>
        <protected>false</protected>
        <recipients>
            <field>Owner__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Risk_OR_Issue_Notification</template>
    </alerts>
    <rules>
        <fullName>Notification of new Risk or Issue created</fullName>
        <actions>
            <name>Notify_PM_PC_and_AE_of_new_Risk_or_Issue</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>This notifies PM, PC and AE of any new Risk or Issue created against a project</description>
        <formula>(ISNEW() || ISCHANGED( RecordTypeId ) || ISCHANGED(Owner__c)) &amp;&amp; isCreatedfromTemplate__c = false</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
