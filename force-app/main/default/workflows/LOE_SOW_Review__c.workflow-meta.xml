    <rules>
        <fullName>LOE Review Request</fullName>
        <actions>
            <name>LOE_SOW_Review_Requested</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Update_LOE_Approver</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>LOE_SOW_Review__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>LOE Review</value>
        </criteriaItems>
        <description>When an LOE  review request is created, an email alert is sent to all Approvers.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>LOE%2FSOW Assigned</fullName>
        <actions>
            <name>LOE_SOW_Approver_Assigned</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>LOE_SOW_Review__c.Approver__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>An approver has been assigned.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>LOE%2FSOW Review Approved</fullName>
        <actions>
            <name>LOE_SOW_Approved</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>LOE_SOW_Review__c.Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <description>The approver changes status to &quot;Approved&quot;</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>LOE%2FSOW Review Needs Work</fullName>
        <actions>
            <name>LOE_SOW_Review_Needs_Work</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>LOE_SOW_Review__c.Status__c</field>
            <operation>equals</operation>
            <value>Needs Minor Work,Needs Major Work</value>
        </criteriaItems>
        <description>The approver changes status to &quot;Needs Major Work&quot; or &quot;Needs Minor Work&quot;</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>SOW Review Request</fullName>
        <actions>
            <name>LOE_SOW_Review_Requested</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Update_SOW_Approver</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>LOE_SOW_Review__c.RecordTypeId</field>
            <operation>equals</operation>
            <value>SOW Review</value>
        </criteriaItems>
        <description>When an LOE review request is created, an email alert is sent to all Approvers.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>SOW Reviewer Acceptance Reminder</fullName>
        <active>false</active>
        <criteriaItems>
            <field>LOE_SOW_Review__c.SOW_Review_Status__c</field>
            <operation>equals</operation>
            <value>Pending Assignment</value>
        </criteriaItems>
        <criteriaItems>
            <field>LOE_SOW_Review__c.SOW_Reviewer__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <description>Send reminder emails in the event a SOW Review request is not picked up within 4 hrs and then again after 24 hrs.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>SOW_Reviewer_Acceptance_Reminder_4_hrs</name>
                <type>Alert</type>
            </actions>
            <timeLength>4</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>SOW_Reviewer_Acceptance_Reminder_24_hrs</name>
                <type>Alert</type>
            </actions>
            <timeLength>24</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Update Approved Date</fullName>
        <actions>
            <name>Update_LOE_Approved_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>LOE_SOW_Review__c.Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
