    <rules>
        <fullName>Close Date Auto Update%3A Closed Lost or No Opportunity</fullName>
        <actions>
            <name>Close_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>When an opportunity is changed to Closed Lost or No Opportunity, the Close Date is auto updated to today&apos;s date.</description>
        <formula>OR(
AND(ISPICKVAL(StageName, &quot;9 Closed Lost&quot;),
CloseDate&gt;TODAY()),
AND(ISPICKVAL(StageName, &quot;10 No Opportunity&quot;),
CloseDate&gt;TODAY())
)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
