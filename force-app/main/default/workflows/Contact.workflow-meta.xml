<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Left_Company_Checked_Contact</fullName>
        <description>If a prospect chooses to opt out in Pardot, the &quot;Left Company&quot; field is checked.</description>
        <field>Left_Company__c</field>
        <literalValue>1</literalValue>
        <name>Left Company Checked - Contact</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>MQL_Counter</fullName>
        <field>MQL_Counter__c</field>
        <formula>1</formula>
        <name>MQL Counter</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>MQL_Date</fullName>
        <field>MQL_Date__c</field>
        <formula>CreatedDate</formula>
        <name>MQL Date</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Total_MQL</fullName>
        <field>Total_MQL__c</field>
        <formula>1</formula>
        <name>Total MQL</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Email Bounce - Contact</fullName>
        <actions>
            <name>Left_Company_Checked_Contact</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Contact.pi__pardot_hard_bounced__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>If a contact email hard bounces in Pardot, the &quot;Left Company&quot; field is checked.</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>MQL Counter %26 Date</fullName>
        <actions>
            <name>MQL_Counter</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>MQL_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Total_MQL</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Contact.Lead_Source__c</field>
            <operation>equals</operation>
            <value>AppExchange,Digital Marketing,Direct Inbound,Hosted Event,Sponsored Event,Website Conversion</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contact.Converted__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <description>Updates MQL fields when a new Contact is created from a Marketing Lead Source.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
