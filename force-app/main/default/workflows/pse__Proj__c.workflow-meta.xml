    <rules>
        <fullName>PSA Project Status Update - Yellow</fullName>
        <actions>
            <name>Project_Status_Update_Yellow</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <booleanFilter>(1 AND 2 AND 3) AND (4 OR 5 OR 6)</booleanFilter>
        <criteriaItems>
            <field>pse__Proj__c.Schedule_Status__c</field>
            <operation>notEqual</operation>
            <value>Red</value>
        </criteriaItems>
        <criteriaItems>
            <field>pse__Proj__c.Financials_Status__c</field>
            <operation>notEqual</operation>
            <value>Red</value>
        </criteriaItems>
        <criteriaItems>
            <field>pse__Proj__c.Scope_Status__c</field>
            <operation>notEqual</operation>
            <value>Red</value>
        </criteriaItems>
        <criteriaItems>
            <field>pse__Proj__c.Financials_Status__c</field>
            <operation>equals</operation>
            <value>Yellow</value>
        </criteriaItems>
        <criteriaItems>
            <field>pse__Proj__c.Scope_Status__c</field>
            <operation>equals</operation>
            <value>Yellow</value>
        </criteriaItems>
        <criteriaItems>
            <field>pse__Proj__c.Schedule_Status__c</field>
            <operation>equals</operation>
            <value>Yellow</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
