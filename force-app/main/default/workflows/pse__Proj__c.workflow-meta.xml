    <rules>
        <fullName>CSAT Survey Notification</fullName>
        <actions>
            <name>CSAT_Survey_Notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>pse__Proj__c.Send_Survey__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>Notifies Marketing &amp; Alliance that the CSAT survey can be sent</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Opp Closed%2FWon</fullName>
        <actions>
            <name>PSA_Opportunity_Closed_Won_and_Project_Created_in_SFDC</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>pse__Proj__c.Opportunity_Stage__c</field>
            <operation>equals</operation>
            <value>8 Closed Won</value>
        </criteriaItems>
        <description>When an opportunity is closed/won, an email is sent to accounting to create the project in Netsuite and gather necessary documents.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
