<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>X7S_Internal_Notification_for_Projects</fullName>
        <description>7S Internal Notification for Projects</description>
        <protected>false</protected>
        <recipients>
            <field>ProjectPM__c</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>noreplysupport@7summitsinc.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Project_Survey_Templates/Project_PM_Notification</template>
    </alerts>
    <rules>
        <fullName>Notify PM of a Survey Response</fullName>
        <actions>
            <name>X7S_Internal_Notification_for_Projects</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>ProjectId__c != null</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
