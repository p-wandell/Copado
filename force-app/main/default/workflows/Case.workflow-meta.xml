<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Email_When_New_Case_is_Submitted</fullName>
        <description>Email When New Case is Submitted</description>
        <protected>false</protected>
        <recipients>
            <recipient>Product Team</recipient>
            <type>caseTeam</type>
        </recipients>
        <recipients>
            <recipient>Support</recipient>
            <type>group</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/New_Case</template>
    </alerts>
    <alerts>
        <fullName>Internal_Support_Request_Closed_Notification</fullName>
        <description>Internal Support Request Closed Notification</description>
        <protected>false</protected>
        <recipients>
            <field>ContactId</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>noreplysupport@7summitsinc.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Cases/Internal_Support_Request_Closed_Notification</template>
    </alerts>
    <alerts>
        <fullName>Internal_Support_Request_Created_Notification</fullName>
        <description>Internal Support Request Created Notification</description>
        <protected>false</protected>
        <recipients>
            <field>ContactId</field>
            <type>contactLookup</type>
        </recipients>
        <senderAddress>noreplysupport@7summitsinc.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Cases/Internal_Support_Request_Created_Notification</template>
    </alerts>
    <alerts>
        <fullName>New_Support_Request_Notification</fullName>
        <description>New Support Request Notification</description>
        <protected>false</protected>
        <recipients>
            <recipient>Internal_Support</recipient>
            <type>group</type>
        </recipients>
        <senderAddress>noreplysupport@7summitsinc.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Cases/New_Support_Request_Notification</template>
    </alerts>
    <alerts>
        <fullName>Send_Email_New_Salesforce_Demo_IP_Request</fullName>
        <ccEmails>phil.weinmeister@7summitsinc.com</ccEmails>
        <description>Send Email - New Salesforce Demo IP Request</description>
        <protected>false</protected>
        <recipients>
            <recipient>jarrod.kingston@7summitsinc.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Salesforce_Request_for_Demo_IP</template>
    </alerts>
    <fieldUpdates>
        <fullName>Assign_Salesforce_SE_Demo_Request</fullName>
        <field>OwnerId</field>
        <lookupValue>jarrod.kingston@7summitsinc.com</lookupValue>
        <lookupValueType>User</lookupValueType>
        <name>Assign Salesforce SE Demo Request</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Update_Case_Owner</fullName>
        <description>Update the case owner to the &quot;Internal Support&quot; queue when a new internal support case is created from the Hive.</description>
        <field>OwnerId</field>
        <lookupValue>Internal_Support</lookupValue>
        <lookupValueType>Queue</lookupValueType>
        <name>Update Case Owner</name>
        <notifyAssignee>true</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Closed Internal Support Case</fullName>
        <actions>
            <name>Internal_Support_Request_Closed_Notification</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.RecordTypeId</field>
            <operation>equals</operation>
            <value>Internal Support</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>Closed</value>
        </criteriaItems>
        <description>Actions to be performed when a new internal support case is closed</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Email Alert</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Case.Status</field>
            <operation>equals</operation>
            <value>New</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>New Internal Support Case</fullName>
        <actions>
            <name>Internal_Support_Request_Created_Notification</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>New_Support_Request_Notification</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Update_Case_Owner</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.RecordTypeId</field>
            <operation>equals</operation>
            <value>Internal Support</value>
        </criteriaItems>
        <description>Actions to be performed when a new internal support case is created</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Salesforce Request for Demo IP</fullName>
        <actions>
            <name>Send_Email_New_Salesforce_Demo_IP_Request</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Assign_Salesforce_SE_Demo_Request</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.Type</field>
            <operation>equals</operation>
            <value>SFDC IP Demo Request</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
