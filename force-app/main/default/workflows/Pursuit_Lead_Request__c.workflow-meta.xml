    <rules>
        <fullName>Managed Services</fullName>
        <actions>
            <name>PLR_Assigned_Status</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Update_Primary_Pursuit_Lead</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Pursuit_Lead_Request__c.Managed_Services_Request__c</field>
            <operation>equals</operation>
            <value>YES</value>
        </criteriaItems>
        <description>Assign managed services to Joe Norman</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>PLR Assigned Status</fullName>
        <actions>
            <name>PLR_Assigned_Status</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Pursuit_Lead_Request__c.Assigned_Pursuit_Lead__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>PLR field &quot;Status&quot; auto populates as Assigned when field &quot;Primary Assigned Pursuit Lead&quot; is populated</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>PLR Demo Request</fullName>
        <actions>
            <name>PLR_Demo_Request_Alert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Pursuit_Lead_Request__c.Demo_Needed__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>Automation for when a Demo is needed on a Pursuit Lead Request.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>PLR Name on Opp</fullName>
        <actions>
            <name>Pursuit_Lead_Auto_Populate</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>True</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>PLR Pending Status</fullName>
        <actions>
            <name>PLR_Pending_Status</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Pursuit_Lead_Request__c.Assigned_Pursuit_Lead__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <description>PLR field &quot;Status&quot; auto populates as Pending when field &quot;Primary Assigned Pursuit Lead&quot; is blank</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>PLR Preferred Request</fullName>
        <actions>
            <name>Preferred_Pursuit_Lead</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Pursuit_Lead_Request__c.Preferred_Pursuit_Lead__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>When a PLR is submitted with field &quot;Preferred Pursuit Lead&quot; populated, an email is sent to the Pursuit Leads Group</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>PLR Requested</fullName>
        <actions>
            <name>PLR_Requested</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Pursuit_Lead_Request__c.Due_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Pursuit_Lead_Request__c.Assigned_Pursuit_Lead__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <description>When a PLR is submitted, an email is sent to the Pursuit Leads Group</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Pursuit Lead Assigned</fullName>
        <actions>
            <name>Pursuit_Lead_Assigned</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>Pursuit_Lead_Request__c.Assigned_Pursuit_Lead__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Pursuit_Lead_Request__c.Secondary_Pursuit_Lead__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>When a pursuit lead is assigned, the creator of the request record and the assigned Pursuit Leads are notified.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Selling Through Curiosity Field Updates</fullName>
        <actions>
            <name>Compelling_Event</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Current_Situation_PLR</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Ideal_Solution</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Ideal_Solution_Benefits</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Impacts</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Problems</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Populates Selling Through Curiosity field values from associated Opportunity</description>
        <formula>OR(
NOT(ISBLANK(Opportunity__r.Compelling_Event__c)),
NOT(ISBLANK(Opportunity__r.Current_Situation__c)),
NOT(ISBLANK(Opportunity__r.Ideal_Solution__c)),
NOT(ISBLANK(Opportunity__r.Ideal_Solution_Benefits__c)),
NOT(ISBLANK(Opportunity__r.Impacts__c)),
NOT(ISBLANK(Opportunity__r.Problems__c))
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Update Complete Date</fullName>
        <actions>
            <name>Update_Complete_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Pursuit_Lead_Request__c.Status__c</field>
            <operation>equals</operation>
            <value>(9) Complete,(10) Deferred / Cancelled,(11) Duplicate</value>
        </criteriaItems>
        <description>Update the &quot;Completed Date&quot; field when the Status field is set to &quot;Complete&quot;</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
