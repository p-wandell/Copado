<apex:page standardController="Big_Document__c" id="page" showHeader="true" sidebar="true">
    <script type="text/javascript" src="{!URLFOR($Resource.ckeditor, '/ckeditor/ckeditor.js')}"/>
    <script type="text/javascript" src="{!URLFOR($Resource.ckeditor, '/ckeditor/ckeditor.js')}"/>
    <apex:outputPanel styleClass="visualstrap">
        <apex:form id="contentform">
            <apex:pageBlock id="pageblock" mode="maindetail" title="Document">
                <apex:pageBlockButtons >
                    <apex:commandButton value="Save" action="{!save}"/>
                    <apex:commandButton value="Cancel" action="{!cancel}"/>
                </apex:pageBlockButtons>
                <apex:pageBlockSection columns="2">
                    <apex:inputField value="{!Big_Document__c.Name__c}"/>
                    <apex:outputField value="{!Big_Document__c.CreatedById}"/>
                    <apex:outputField value="{!Big_Document__c.CreatedDate}"/>
                    <apex:outputField value="{!Big_Document__c.LastModifiedDate}"/>
                </apex:pageBlockSection>
                <apex:pageBlockSection id="pagesection" columns="1">
                    <apex:inputTextArea id="content" value="{!Big_Document__c.Content__c}"/>
                </apex:pageBlockSection>
            </apex:pageBlock>
        </apex:form>
    </apex:outputPanel>
    <script type="text/javascript">
        CKEDITOR.replace( '{!$Component.page.contentform.pageblock.pagesection.content}', {
            toolbar: 'Basic',
            uiColor: '#9AB8F3',
            height: '400px',
            width: '95%',
            resize_enabled: false
        });
    </script>
</apex:page>