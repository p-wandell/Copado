            <div class="col-md-8">
                <a href="/Cases?create=1" id="create-case-home" class="btn btn-lg btn-block ss-button">Create a Case</a>
                <chatter:newsfeed />
            </div>
            <!--<div class="col-md-4">
                <chatter:followers entityId="{!$User.Id}"/>
            </div>-->
            <div class="col-md-4 ss-bootstrap">
                <div class="page-header" style="margin: 10px 0 20px !important;"><h4><a href="http://twitter.com/7SummitsAgency" title="@7SummitsAgency" target="_blank">@7SummitsAgency</a> {!$Label.recentTweets}</h4></div>
