<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>7S Members Banner</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage,lightning__AppPage,lightningCommunity__Default,lightning__HomePage">
            <property name="iconName" label="Icon Name" type="String" description="Enter the name of icon"/>
            <property name="memberTitle" label="Member Directory Title" type="String" description="Text to display as title"/>
            <property name="displaySearch" label="Show Search" type="Boolean" description="Show Search in header"/>
            <property name="searchPlaceHolder" label="Place Holder Text" type="String" description="Shows Place holder text"/>
            <property name="showNumberOfMembers" label="Display Number of Members" type="Boolean" description="Enable/Disable number of Members to be displayed."/>
            <property name="showBottomBorder" label="Show bottom border" type="Boolean" description="Display a border line below the header"/>
            <property name="customClass" label="Custom Class" type="String" description="Used for custom styling."/>
            <property name="listId" label="List Id" type="String" description="Id of specific List"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>