<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>50.0
</apiVersion>
	<isExposed>true</isExposed>
	<masterLabel>7S Events Detail Info</masterLabel>
	<targets>
		<target>lightning__AppPage</target>
		<target>lightning__HomePage</target>
		<target>lightning__RecordPage</target>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
	</targets>
	<targetConfigs>
		<targetConfig targets="lightningCommunity__Default">
			<property name="eventInfoTitle"
			          label="Title"
			          type="String"
			          default="Event Details"
			          description="Event info title"/>
			<property name="variant"
			          label="Default Variant"
			          type="String"
			          description="Select the default list layout"
			          datasource="default,slds-card,featured"/>
			<property name="hideAddToCalendar"
			          label="Hide Add To Calendar (ATC)"
			          type="Boolean"
			          description="Enable/disable Add to Calendar"/>
			<property name="addToCalendarButtonText"
			          label="Add to Calendar Button Text"
			          type="String"
			          default="Add to Calendar"
			          description="Add to calendar button Text"/>
			<property name="atcPlainText"
			          label="Use Event Summary (ATC)"
			          type="Boolean"
			          description="Use the summary text with Add to Calendar (Outlook)"/>
			<property name="customClass"
			          label="Custom Class"
			          type="String"
			          description="Used for custom styling."/>
			<property name="listId"
			          label="Component Group"
			          type="String"
			          description="Unique ID to link complimentary components together to share data."/>
			<property name="recordId"
			          label="Record Id"
			          type="String"
			          default="{!recordId}"
			          description="Set to {!recordId} to pass the page's record Id."/>
		</targetConfig>
		<targetConfig targets="lightning__AppPage, lightning__HomePage,lightning__RecordPage">
			<property name="eventInfoTitle"
			          label="Title"
			          type="String"
			          description=""/>
			<property name="variant"
			          label="Default Variant"
			          type="String"
			          description="Select the default list layout"
			          datasource="default,slds-card,featured"/>
			<property name="hideAddToCalendar"
			          label="Hide Add To Calendar (ATC)"
			          type="Boolean"
			          description="Enable/disable Add to Calendar"/>
			<property name="addToCalendarButtonText"
			          label="Add to Calendar Button Text"
			          type="String"
			          description="Button Text"/>
			<property name="atcPlainText"
			          label="Use Event Summary (ATC)"
			          type="Boolean"
			          description="Use the summary text with Add to Calendar (Outlook)"/>
			<property name="customClass"
			          label="Custom Class"
			          type="String"
			          description="Used for custom styling."/>
			<property name="listId"
			          label="Component Group"
			          type="String"
			          description="Unique ID to link complimentary components together to share data."/>
		</targetConfig>
	</targetConfigs>
</LightningComponentBundle>