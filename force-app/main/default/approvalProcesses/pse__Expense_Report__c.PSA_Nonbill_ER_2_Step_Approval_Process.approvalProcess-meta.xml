<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>megan.harrington@7summitsinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>michelle@7summitsinc.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 2</label>
        <name>Step_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>PSA_ER_Approved_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_IFF_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSA_ER_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Disable_Auto_Submit_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_IFF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Rejected_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>PSA_ER_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Expense_Report_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PSA_Disable_Auto_Submit_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Set_ER_Submitted_True</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PSA Nonbill ER 2-Step Approval Process</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>PSA_ER_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Disable_Auto_Submit_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_IFF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Status_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_ER_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
