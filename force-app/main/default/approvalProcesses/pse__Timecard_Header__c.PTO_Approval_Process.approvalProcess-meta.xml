<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>PTO_Has_Been_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>PTO_Has_Been_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>unfiled$public/PTO_Request_Approval_Email_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>pse__Project__r.Name = &quot;7S Internal : Vacation&quot; ||
pse__Project__r.Name = &quot;7S Internal : Personal Floating Holiday&quot;</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PSA_Timecard_Approved_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_IFF_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PSA_Timecard_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_IFF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PSA_Set_Submitted_Flag_To_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PTO_Timecard_Manager_Approval_Email_Alert</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>PTO Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>PSA_Timecard_Approved_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_IFF_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Status_Saved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PSA_Timecard_Submitted_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
